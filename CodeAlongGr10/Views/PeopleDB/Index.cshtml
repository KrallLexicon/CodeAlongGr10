@model List<Person>
@{
    ViewData["Title"] = "Index";
}

<div><a asp-action="Create" class="btn btn-primary">Create a new person</a></div>

<h1>List of people</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Phone number</th>
            <th> </th> 
            <th> </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.Name</td>
                <td>@person.Age</td>
                <td>@person.PhoneNumber</td>
                <td><a asp-action="Delete" asp-route-id=@person.Id class="btn btn-danger">Delete</a></td>
                <td><a asp-controller="CarOwnerDb" asp-action="Index" class="btn btn-primary" asp-route-id=@person.Id>Cars owned</a></td>
            </tr>
        }
    </tbody>

</table>