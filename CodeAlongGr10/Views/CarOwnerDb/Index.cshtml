@model List<Car>
@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() != 0)
{
 <h1>Cars owned by @ViewBag.Name</h1>

 <table class="table">
     <thead>
         <tr>
             <th>Reg number</th>
             <th>Brand</th>
             <th>Model</th>
             <th> </th>
         </tr>
     </thead>
     <tbody>
         @foreach(var car in Model)
            {
                <tr>
                    <td>@car.RegNumber</td>
                    <td>@car.Brand</td>
                    <td>@car.CarModel</td>
                    <td><a asp-action="RemoveCarFromPerson" class="btn btn-danger" asp-route-id=@ViewBag.PersonId asp-route-regnumber=@car.RegNumber>Remove car ownership</a> </td>
                </tr>
            }
        </tbody>
 </table>
    
}
else
{
    <h1>@ViewBag.Name does not own any cars!</h1>
}


